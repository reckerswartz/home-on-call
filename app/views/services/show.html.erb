<!--Masthead Section-->
<%= content_for :my_mast do %>
  <header class="masthead" style="background: linear-gradient(to bottom, rgba(22, 22, 22, 0.3) 0%, rgba(22, 22, 22, 0.7) 75%, #161616 100%), url(<%=header_selector(@service)%>);">
      <div class="container d-flex h-100 align-items-center">
      <div class="mx-auto text-center ">  
        <div class="text-overlay d-flex align-items-center">
          <h1 class="mx-auto mt-2 h2"> <%="#{@service.title.titleize}" %></h1>â€‹
        </div>
      </div>
    </div>
  </header>
<%end%>
    <div class="container">
        <p id="notice"><%= notice %></p>

        <p>
          <strong>Meta Description:</strong>
          <%= @service.meta_description %>
        </p>
        <p>
          <strong>Title:</strong>
          <%= @service.title %>
        </p>

        <p>
          <strong>Image: </strong>
          <%= image_tag @service.image, alt: @service.title, class: "service-image" if @service.image%>
        </p>
        <p>
          <strong>Content:</strong>
          <%= sanitize(@service.content) %>
        </p>

        <p>
          <strong>Businesstype:</strong>
          <%= @service.business_type.name %>
        </p>

        <p>
          <strong>Slug:</strong>
          <%= @service.slug %>
        </p>

        <%= link_to 'Edit', edit_service_path(@service), class: "btn btn-primary" %> 
        <%= link_to 'Back', services_path, class: "btn btn-primary" %>
      </div>
